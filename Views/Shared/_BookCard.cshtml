@model bookspace.Models.Book

<div class="card h-100">
    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
    {
        <img src="@Model.CoverImageUrl" class="card-img-top" alt="@Model.Title" style="height: 200px; object-fit: cover;">
    }
    else
    {
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="fas fa-book fa-3x text-muted"></i>
        </div>
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Yazar:</strong> @Model.Author</p>
        <p class="card-text"><small class="text-muted"><i class="fas fa-calendar me-1"></i>@Model.PublicationYear • <i class="fas fa-tag me-1"></i>@Model.Category?.Name</small></p>
        <p class="card-text"><small class="text-muted"><i class="fas fa-barcode me-1"></i>ISBN: @Model.ISBN</small></p>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-eye me-1"></i>Detayları Gör
            </a>
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-1"></i>Düzenle
                    </a>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash me-1"></i>Sil
                    </a>
                </div>
            }
        </div>
    </div>
</div> 