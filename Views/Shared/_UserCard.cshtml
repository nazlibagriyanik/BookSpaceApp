@model bookspace.Models.User

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <h5 class="card-title">@Model.UserName</h5>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><small class="text-muted">Member since: @Model.CreatedAt.ToString("MMM dd, yyyy")</small></p>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="ms-3">
                    <a asp-area="Admin" asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </div>
            }
        </div>
    </div>
</div> 