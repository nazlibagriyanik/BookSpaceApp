@model bookspace.Models.Category

<div class="card h-100">
    <div class="card-body">
        <h5 class="card-title"><i class="fas fa-tag me-2"></i>@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">
            <small class="text-muted">
                <span class="badge bg-primary"><i class="fas fa-book me-1"></i>@(Model.Books?.Count ?? 0) Kitap</span>
            </small>
        </p>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a asp-controller="Categories" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-eye me-1"></i>Detayları Gör
            </a>
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-1"></i>Düzenle
                    </a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash me-1"></i>Sil
                    </a>
                </div>
            }
        </div>
    </div>
</div> 