@model bookspace.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="text-center">
    <h1 class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Hata.</h1>
    <h2 class="text-danger">İsteğiniz işlenirken bir hata oluştu.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>İstek ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-home me-1"></i>Ana Sayfaya Dön
        </a>
    </div>
</div> 