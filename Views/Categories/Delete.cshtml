@model bookspace.Models.Category
@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-trash text-danger me-2"></i>Kategori Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Kategorilere Dön
    </a>
</div>

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-triangle me-2"></i>Bu kategoriyi silmek istediğinizden emin misiniz?</h4>
    <p>Bu işlem geri alınamaz.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-tag me-2"></i>@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <small class="text-muted">
                        <span class="badge bg-primary"><i class="fas fa-book me-1"></i>@(Model.Books?.Count ?? 0) Kitap</span>
                    </small>
                </p>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>İptal
            </a>
        </form>
    </div>
</div> 