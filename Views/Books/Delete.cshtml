@model bookspace.Models.Book
@{
    ViewData["Title"] = "Kitap Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-trash text-danger me-2"></i>Kitap Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Kitaplara Dön
    </a>
</div>

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-triangle me-2"></i>Bu kitabı silmek istediğinizden emin misiniz?</h4>
    <p>Bu işlem geri alınamaz ve ilgili tüm tartışmaları da silecektir.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="card-img-top" alt="@Model.Title" style="height: 300px; object-fit: cover;">
            }
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-book me-2"></i>@Model.Title</h5>
                <p class="card-text"><strong>Yazar:</strong> @Model.Author</p>
                <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
                <p class="card-text"><strong>Yayın Yılı:</strong> @Model.PublicationYear</p>
                <p class="card-text"><strong>Kategori:</strong> @Model.Category?.Name</p>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="card-text"><strong>Açıklama:</strong> @Model.Description</p>
                }
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>İptal
            </a>
        </form>
    </div>
</div> 