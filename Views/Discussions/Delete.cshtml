@model bookspace.Models.Discussion
@{
    ViewData["Title"] = "Tartışma Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-trash text-danger me-2"></i>Tartışma Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Tartışmalara Dön
    </a>
</div>

<div class="alert alert-danger">
    <h4><i class="fas fa-exclamation-triangle me-2"></i>Bu tartışmayı silmek istediğinizden emin misiniz?</h4>
    <p>Bu işlem geri alınamaz ve tüm yorumları da silecektir.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-comment me-2"></i>@Model.Title</h5>
            </div>
            <div class="card-body">
                <p class="card-text">@Model.Content</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-user me-1"></i>Yazar: @(Model.User?.UserName ?? "Bilinmeyen Kullanıcı")
                    </small>
                    <small class="text-muted">
                        <i class="fas fa-book me-1"></i>Kitap: @Model.Book?.Title
                    </small>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>İptal
            </a>
        </form>
    </div>
</div> 