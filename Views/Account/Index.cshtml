@model bookspace.Models.User
@{
    ViewData["Title"] = "Hesabım";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-1">
                        <i class="fas fa-user-circle text-primary me-2"></i>Hesabım
                    </h1>
                    <p class="text-muted mb-0">Hoş geldin, @Model.DisplayName!</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Profile" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Profili Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-book-open fa-lg text-primary"></i>
                    </div>
                    <h3 class="text-primary mb-1">@Model.BooksRead</h3>
                    <p class="text-muted mb-0 small">Okunan Kitap</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-star fa-lg text-success"></i>
                    </div>
                    <h3 class="text-success mb-1">@Model.ReviewsWritten</h3>
                    <p class="text-muted mb-0 small">Yazılan Değerlendirme</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-comments fa-lg text-warning"></i>
                    </div>
                    <h3 class="text-warning mb-1">@Model.Comments.Count</h3>
                    <p class="text-muted mb-0 small">Yapılan Yorum</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-users fa-lg text-info"></i>
                    </div>
                    <h3 class="text-info mb-1">@Model.DiscussionsStarted</h3>
                    <p class="text-muted mb-0 small">Başlatılan Tartışma</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Profile Information & Actions -->
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom p-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-user-circle text-primary me-2"></i>
                        Profil ve Hesap Yönetimi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Profile Info -->
                        <div class="col-lg-8 mb-4 mb-lg-0">
                            <h6 class="mb-3 text-muted">Profil Bilgileri</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Kullanıcı Adı</label>
                                    <p class="mb-0 fw-semibold">@Model.UserName</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">E-posta</label>
                                    <p class="mb-0 fw-semibold">@Model.Email</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.FullName))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Ad Soyad</label>
                                        <p class="mb-0 fw-semibold">@Model.FullName</p>
                                    </div>
                                }
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Üyelik Tarihi</label>
                                    <p class="mb-0 fw-semibold">@Model.CreatedAt.ToString("dd MMMM yyyy")</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Location))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Konum</label>
                                        <p class="mb-0 fw-semibold">@Model.Location</p>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Website))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Web Sitesi</label>
                                        <p class="mb-0">
                                            <a href="@Model.Website" target="_blank" class="text-decoration-none fw-semibold">@Model.Website</a>
                                        </p>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Bio))
                                {
                                    <hr class="my-3 d-lg-none">
                                    <div class="col-12">
                                        <label class="form-label text-muted small">Hakkımda</label>
                                        <p class="mb-0">@Model.Bio</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="col-lg-4">
                             <h6 class="mb-3 text-muted">Hızlı İşlemler</h6>
                            <div class="d-grid gap-2">
                                <a asp-action="Profile" class="btn btn-light border">
                                    <i class="fas fa-edit me-2"></i>Profili Düzenle
                                </a>
                                <a asp-action="ChangePassword" class="btn btn-light border">
                                    <i class="fas fa-key me-2"></i>Şifre Değiştir
                                </a>
                                <a asp-action="AccountStats" class="btn btn-light border">
                                    <i class="fas fa-chart-bar me-2"></i>İstatistikleri Gör
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-gradient-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
}

.bg-gradient-secondary {
    background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
}

.bg-gradient-dark {
    background: linear-gradient(135deg, #343a40 0%, #212529 100%);
}
</style>
