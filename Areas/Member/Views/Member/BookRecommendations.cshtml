@model List<bookspace.Models.Book>
@{
    ViewData["Title"] = "Yapay Zeka Kitap Önerileri";
}

<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="h2 mb-1">
            <i class="fas fa-magic text-primary me-2"></i>Yapay Zeka Kitap Önerileri
        </h1>
        <p class="text-muted mb-0">Okuma alışkanlıklarınıza ve favori kategorilerinize göre sizin için seçtiklerimiz.</p>
    </div>

    <!-- Recommendations -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var book in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    @await Html.PartialAsync("_BookCard", book)
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-lightbulb fa-3x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Size özel öneri bulamadık.</h4>
                    <p>Daha fazla kitap okuyup tartışmalara katıldıkça size daha iyi öneriler sunabiliriz.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-search me-1"></i>Kitaplara Göz At
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Panoya Dön
        </a>
    </div>
</div>

